<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaomeijr.mhdxh.ui.activity.VerificationActivity">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/title_base" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人介绍"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="      期货（Futures）与现货完全不同，现货是实实在在可以
交易的货（商品），期货主要不是货，而是以某种大众产品
如棉花、大豆、石油等及金融资产如股票、债券等为标的标
准化可交易合约。因此，这个标的物可以是某种商品（例如
黄金、原油、农产品），也可以是金融工具。"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/rc_divider_line" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/joinroom"
        android:layout_marginTop="15dp"
        android:background="@color/rc_divider_line" />

    <TextView
        android:id="@+id/joinroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="15dp"
        android:text="发送"
        android:textColor="@color/text_black"
        android:textSize="14sp" />
</RelativeLayout>
